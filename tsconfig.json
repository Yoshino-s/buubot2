{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015"],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
