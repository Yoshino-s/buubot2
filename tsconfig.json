{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2017",
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*", "node_modules/**/*"]
}
