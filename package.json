{
  "name": "buubot2",
  "version": "2.2.0",
  "description": "A qq bot based on mirai",
  "main": "src/main.ts",
  "repository": "git@github.com:Yoshino-s/buubot2.git",
  "author": "Yoshino-s <yoshino.prog@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "mirai-bot start --dev",
    "start": "mirai-bot start",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .js,.ts --fix",
    "postinstall": "node scripts/check.js",
    "config": "node scripts/config.js",
    "build": "mirai-bot build"
  },
  "dependencies": {
    "@mirai-bot/cli": "^2.1.0",
    "@mirai-bot/config": "^2.1.1",
    "@mirai-bot/core": "^2.1.0",
    "@mirai-bot/utils": "^2.1.1",
    "dayjs": "^1.9.1",
    "diff": "^4.0.2",
    "express": "^4.17.1",
    "jimp": "^0.16.1",
    "vm2": "^3.9.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/bull": "^3.14.3",
    "@types/diff": "^4.0.2",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "@vercel/ncc": "^0.24.1",
    "conventional-changelog-cli": "^2.0.34",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "standard-version": "^8.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^4.0.3"
  },
  "mirai-bot": {
    "version": "2.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "standard-version": {
    "bumpFiles": [
      "package.json",
      "bot/package.json"
    ],
    "header": "# Changelog\n\n"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm run lint && commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
