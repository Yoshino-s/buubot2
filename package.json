{
  "name": "buubot2",
  "version": "2.0.0",
  "description": "A qq bot based on mirai",
  "main": "index.js",
  "repository": "git@github.com:Yoshino-s/buubot2.git",
  "author": "Yoshino-s <yoshino.prog@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "node scripts/check.js",
    "config": "node scripts/config.js",
    "build": "node scripts/build.js",
    "lint": "cd bot && npm run lint"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "inquirer": "^7.3.2",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/redis": "^2.8.25",
    "conventional-changelog-cli": "^2.0.34",
    "cz-conventional-changelog": "3.2.0",
    "husky": "^4.2.5",
    "standard-version": "^8.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "standard-version": {
    "bumpFiles": [
      "package.json",
      "bot/package.json"
    ],
    "header": "# Changelog\n\n"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm run lint && commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
