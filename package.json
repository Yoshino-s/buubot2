{
  "name": "mirai-bot",
  "version": "2.1.2",
  "description": "A qq bot based on mirai",
  "main": "./dist/index.js",
  "types": "./dist/mirai-bot.d.ts",
  "files": [
    "/dist"
  ],
  "repository": "git@github.com:Yoshino-s/buubot2.git",
  "author": "Yoshino-s <yoshino.prog@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsc && dts-bundle --name mirai-bot --main dist/index.d.ts --removeSource --out mirai.d.ts",
    "lint": "eslint . --ext .js,.ts,.json --fix",
    "prepublish": "yarn lint && yarn build"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "bull": "^3.16.0",
    "bull-board": "^0.9.0",
    "dayjs": "^1.8.29",
    "diff": "^4.0.2",
    "ejs": "^3.1.3",
    "express": "^4.17.1",
    "jimp": "^0.16.0",
    "log4js": "^6.3.0",
    "mirai-ts": "^0.7.4",
    "redis": "^3.0.2",
    "rss-parser": "^3.8.0",
    "socks-proxy-agent": "^5.0.0",
    "vm2": "^3.9.2",
    "ws": "^7.3.1",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/bull": "^3.14.0",
    "@types/bull-board": "^0.6.0",
    "@types/diff": "^4.0.2",
    "@types/ejs": "^3.0.4",
    "@types/node": "^14.0.13",
    "@types/redis": "^2.8.25",
    "@types/ws": "^7.2.5",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "conventional-changelog-cli": "^2.0.34",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "standard-version": "^9.0.0",
    "strict-event-emitter-types": "^2.0.0",
    "typescript": "^4.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "standard-version": {
    "bumpFiles": [
      "package.json",
      "bot/package.json"
    ],
    "header": "# Changelog\n\n"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm run lint && commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
