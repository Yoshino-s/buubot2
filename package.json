{
  "name": "buubot2",
  "version": "2.0.0",
  "description": "A qq bot based on mirai",
  "main": "src/main.ts",
  "repository": "git@github.com:Yoshino-s/buubot2.git",
  "author": "Yoshino-s <yoshino.prog@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "node scripts/check.js",
    "config": "node scripts/config.js",
    "build:bot": "ncc build src/main.ts -o deploy/src/ && cp node_modules/bull/lib/commands/*.lua deploy/src/",
    "build:mirai": "docker-compose build",
    "build": "yarn build:bot && yarn build:mirai",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .js,.ts,.json --fix",
    "dev": "ts-node src/main.ts"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "bull": "^3.16.0",
    "bull-board": "^0.9.0",
    "dayjs": "^1.8.29",
    "diff": "^4.0.2",
    "ejs": "^3.1.3",
    "express": "^4.17.1",
    "jimp": "^0.16.0",
    "log4js": "^6.3.0",
    "mirai-ts": "^0.7.4",
    "redis": "^3.0.2",
    "rss-parser": "^3.8.0",
    "socks-proxy-agent": "^5.0.0",
    "vm2": "^3.9.2",
    "ws": "^7.3.1",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@types/bull": "^3.14.0",
    "@types/bull-board": "^0.6.0",
    "@types/diff": "^4.0.2",
    "@types/ejs": "^3.0.4",
    "@types/node": "^14.0.13",
    "@types/ws": "^7.2.5",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "strict-event-emitter-types": "^2.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/redis": "^2.8.25",
    "conventional-changelog-cli": "^2.0.34",
    "cz-conventional-changelog": "3.2.0",
    "husky": "^4.2.5",
    "standard-version": "^8.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "standard-version": {
    "bumpFiles": [
      "package.json",
      "bot/package.json"
    ],
    "header": "# Changelog\n\n"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm run lint && commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
